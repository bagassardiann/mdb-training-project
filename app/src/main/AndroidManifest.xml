<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.training.day1">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mdb_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mdb_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".LoginActivity"/>
        <activity android:name=".DetailOffice" android:label="Detail Kantor"  />
        <activity android:name=".DetailEmployee" android:label="Detail Karyawan" />
        <activity android:name=".OfficeActivity" android:label="List Kantor"/>
        <activity android:name=".AboutActivity" android:label="About"/>
        <activity android:name=".EmployeeActivity" android:label="List Karyawan" />
        <activity android:name=".LupaPassword" android:label="Lupa Password" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>